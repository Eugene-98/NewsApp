@model NewsApp.ViewModels.RegisterViewModel
 
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Username">Email</label><br />
            <input type="text" asp-for="Username" />
            <span asp-validation-for="Username" />
        </div>
        <div>
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="PasswordConfirm">Confirm Password</label><br />
            <input asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm" />
        </div>
        <div>
            <input type="submit" value="Sign in" />
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
