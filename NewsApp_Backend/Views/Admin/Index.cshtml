
@model IEnumerable<NewsApp.Models.News>
@using Microsoft.AspNetCore.Mvc.Localization
@using NewsApp_Backend
 
@inject IViewLocalizer Localizer
 
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" >@SharedLocalizer["Create"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @SharedLocalizer["NewsName"]
            </th>
            <th>
                @SharedLocalizer["NewsHeader"]
            </th>
            <th>
                @SharedLocalizer["NewsSubtitle"]
            </th>
            <th>
                @SharedLocalizer["NewsImageName"]
            </th>
            <th>
                @SharedLocalizer["NewsImagePath"]
            </th>
            <th>
                @SharedLocalizer["NewsText"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NewsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsHeader)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsSubtitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsImageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewsText)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NewsId">@SharedLocalizer["Edit"]</a> |
                <a asp-action="Details" asp-route-id="@item.NewsId">@SharedLocalizer["Details"]</a> |
                <a asp-action="Delete" asp-route-id="@item.NewsId">@SharedLocalizer["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
