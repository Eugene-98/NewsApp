<!DOCTYPE html>
@model NewsApp.Models.News  
@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";

}

<h1>Create</h1>

<h4>News</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewsName" class="control-label"></label>
                <input name="NewsName" class="form-control" />
                <span asp-validation-for="NewsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsHeader" class="control-label"></label>
                <input name="NewsHeader" class="form-control" />
                <span asp-validation-for="NewsHeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsSubtitle" class="control-label"></label>
                <input name="NewsSubtitle" class="form-control" />
                <span asp-validation-for="NewsSubtitle" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="NewsText" class="control-label"></label>
                <input name="NewsText" class="form-control" />
                <span asp-validation-for="NewsText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>News Image</label>
                <input name="uploadedFile" type="file" class="form-control"/>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
